<div id="body_sidebar">
<h1>Show only...</h1>
<ul>
<% for category, description in PublicBody.categories_with_description %>
<li>
    <%= link_to_unless (@tag == category), description, list_public_bodies_url(:tag => category) %> 
</li>
<% end %>
</ul>
<p>
<a href="/help/about#missing_body">Are we missing a public authority?</a>
</p>
</div>

<% @title = "Public authorities - " + @description %>

<h1><%=@title%></h1>
<p class="subtitle">
    <%= @public_bodies.size %> in total
</p>

<%= render :partial => 'body_listing', :locals => { :public_bodies => @public_bodies } %>

<%= will_paginate(@public_bodies) %>
